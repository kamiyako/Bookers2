<%= notice %>

<h1>Book detail</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-4" style="height:400px;" >
      <!--新規投稿フォーム-->
      <%= render 'booklist', book: @book %>
    </div>
    <div class="col-md-8" style="height:400px;">
      <h1>Books</h1>
      <!--ここから-->
        <table class="table">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Title</th>
              <th scope="col">Opinion</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row"><%= image_tag @book.user.get_profile_image(50,50)</th>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
                <% if book.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
              <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                <% end %>
            </tr>
            <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>
<!--ここまで-->

