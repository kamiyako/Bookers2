<!--新規投稿フォーム-->
<h1 class="mt-3">New book</h1>
<!--@book→book-->
<%= form_with model: book, url: '/books', method: :post do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label></br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label></br>
     <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
<!--新規投稿フォームend-->
