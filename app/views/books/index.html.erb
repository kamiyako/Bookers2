<!--index.html-->
<%= notice %>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
        <!--<img src="img/no_image.jpeg" width="150" height="100" />-->
        </td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <% if book.user == current_user %>
          <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--新規投稿フォーム-->
<h1>New Book</h1>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
  
<% end %>