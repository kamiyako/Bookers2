<!--index.html-->
<%= notice %>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
        <%= image_tag book.user.get_profile_image(50,50) %></p>
        </td>
        <td><%= link_to book.title,book_path(book.id) %></td>
        <td><%= book.body %></td>
        <% if book.user == current_user %>
          <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--新規投稿フォーム-->
<%= render 'booklist', book: @book %>