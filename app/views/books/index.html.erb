<!--book一覧(Books)ページ-->


  <div class="row">
    <div class="col-md-4" >
      <h1>User info</h1>
      <!--ユーザー詳細-->
      <%= render 'users/userlist', user: @user %>
      <!--新規投稿フォーム-->
      <%= render 'booklist', book: @book %>
      <!--ここから-->
    </div>
    <div class="col-md-8">
      <h1>Books</h1>
        <table class="table">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Title</th>
              <th scope="col">Opinion</th>
              <th scope="col"></th>
            </tr>
          </thead>
            <% @books.each do |book| %>
          <tbody>
            <tr>
              <th scope="row"><%= image_tag book.user.get_profile_image(50,50) %></th>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>

<!--ここまで-->
