<!--book詳細(Book detail)ページ-->
<div class="col-md-3">
      <!--ユーザー表示-->
<%= render 'users/userlist', user: @book.user %>
      <!--新規投稿フォーム-->
<%= render 'booklist', book: @booknew %>
</div>
    <!--ここから-->
    <div class="col-md-8 offset-md-1" >
      <h1>Book detail</h1>
        <table class="table">

          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= image_tag @book.user.get_profile_image(50,50) %>
                <% end %>
                  <br><%= link_to @book.user.name, user_path(@book.user.id)%></td>
                <td>
                <%= link_to @book.title, book_path(@book.id)%>
                </td>
              <td><%= @book.body %></td>
              <!--いいね-->
              <td id="book_<%= @book.id %>">
              <%= render 'like', book: @book %>
              </td>
              <td>comment：<%= @book.book_comments.count %></td>
                <% if @book.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
              <td><%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                <% end %>
            </tr>
          </tbody>
        </table>

        <!--コメント投稿欄-->
        <table class="table table-striped">
          <tbody>
              <% @book.book_comments.each do |book_comment| %>
              <tr>
              <td>
                <%= link_to user_path(book_comment.user.id) do %>
                  <%= image_tag book_comment.user.get_profile_image(50,50) %><br>
                  <%= book_comment.user.name %>
                <% end %>
              </td>
              <td>
                <%= book_comment.comment %>
              </td>
              <td>
                <% if book_comment.user == current_user %>
                  <%= link_to "destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete,class:"btn btn-danger"%>
                <% end %>
              </td>
              </tr>
              <% end %>
          </tbody>
        </table>
            <%= form_with model: [@book, @book_comment] do |f| %>
              <%= f.text_area :comment, class: 'form-control',placeholder: "コメントをここに" %>
              <%= f.submit "Comment" %>
            <% end %>
  </div>