<!--book詳細(Book detail)ページ-->

<div class="container-fluid mt-2">
  <div class="row">
    <div class="col-md-4" >
      <h1>User info</h1>
      <!--ユーザー表示-->
      <%= render 'users/userlist', user: @user %>
      <!--新規投稿フォーム-->
      <%= render 'booklist', book: @booknew %>
    <!--ここから-->
    </div>
    <div class="col-md-8" >
      <h1>Book detail</h1>
        <table class="table">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col"></th>
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope ="row"><%= image_tag @book.user.get_profile_image(50,50) %></th>
              <td><%= link_to @user.name, user_path(@user.id)%></td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
                <% if @book.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
              <td><%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                <% end %>
            </tr>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>

