<!--book詳細(Book detail)ページ-->
<div class="col-md-3">
      <!--ユーザー表示-->
<%= render 'users/userlist', user: @user %>
      <!--新規投稿フォーム-->
<%= render 'booklist', book: @booknew %>
</div>
    <!--ここから-->
    <div class="col-md-8 offset-md-1" >
      <h1>Book detail</h1>
        <table class="table">
          
          <tbody>
            <tr>
              <td><%= image_tag @book.user.get_profile_image(50,50) %><br><%= link_to @user.name, user_path(@user.id)%></td>
              <td>
                <%= link_to @book.title, book_path(@book.id)%>
                </td>
              <td><%= @book.body %></td>
                <% if @book.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
              <td><%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                <% end %>
            </tr>
          </tbody>
        </table>
    </div>

