<!-- ユーザー詳細 -->

  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr><th>name</th><th><%= user.name %></th></tr>
      <tr><td>introduction</td><td></td></tr>
      <tr><td><%= user.introduction %></td><td></td></tr>
      <tr><td>フォロー数:
      <%= link_to user_followings_path(user) do %>
        <%= user.followings.count %>
      <% end %>
      </td><td></td></tr>
      <tr><td>フォロワー数:
      <%= link_to user_followers_path(user) do %>
        <%= user.followers.count %>
      <% end %>
      </td><td></td></tr>
    </tbody>
  </table>
  <%if current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to 'フォロー外す', user_relationships_path(user.id), class: "btn btn-danger", method: :delete  %>
      <% else %>
        <%= link_to 'フォローする', user_relationships_path(user.id), class: "btn btn-success", method: :POST %>
      <% end %>
  <% end %>
    <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
      <i class=" fas fa-user-cog"></i>
    <% end %>




<!-- 1ユーザーの詳細end -->