<!-- 1ユーザーの詳細 -->
<%= render 'users/userlist', user: @user %>
<!--新規投稿フォーム-->
<%= render 'books/booklist', book: @book %>

<!-- 1ユーザーの投稿一覧 -->
<h1>Users</h1>

<table>
  <thead>
    <tr>
      <td></td>
      <td></td>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
      <%= image_tag @user.get_profile_image(50,50) %>
      </td>
      <td><%= book.user.name %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
    


