<!--ユーザー詳細ページ-->

<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-md-4" style="height:400px;" >
      <h1>User info</h1>
      <!--ユーザー詳細表示-->
      <%= render 'users/userlist', user: @user %>
      <!--新規投稿フォーム-->
      <%= render 'books/booklist', book: @book %>
       <!--ここから-->
    </div>
    <div class="col-md-8" style="height:400px;">
      <h1>User</h1>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">image</th>
              <th scope="col">name</th>
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
              <th scope="row"><%= image_tag @user.get_profile_image(50,50) %></th>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>
<!--ここまで-->
