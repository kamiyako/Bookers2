<!--マイページ-->
<!-- 1ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>introduction</p>
  <p><%= @user.introduction %></p>
  <% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path %></p>
  <% end %>
</div>

<!-- 1ユーザーの投稿一覧 -->
<h1>Users</h1>

<table>
  <thead>
    <tr>
      <td></td>
      <td></td>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
      <%= image_tag @user.get_profile_image(50,50) %>
      </td>
      <td><%= book.user.name %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
    


