  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!--プロフィール編集-->
<h2 class="text-center mt-5 ">User info</h2>
<div class="row justify-content-center ml-5">
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
  <label for="inputImage">ProfileImage</label><br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br> 
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_area :introduction, id:"inputIntroduction", placeholder:"text"%><br>
  <button type=f.submit  class="btn btn-primary mt-2">
  <%= "Update User" %>
  </button>
<% end %>
</div>