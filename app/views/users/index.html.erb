
<!--ユーザー一覧ページ-->
<h1>Users</h1>
<!--users.index.html-->

<div class="container-fluid">
  <div class="row">
    <div class="col-md-4" style="height:400px;" >
      <!--マイページも表示させたい-->
      <!--新規投稿フォーム-->
      <%= render 'books/booklist', book: @book %>
    </div>
    <div class="col-md-8" style="height:400px;">
      <h1>Users</h1>
      <!--ここから-->

        <table class="table">
          <thead>
            <tr>
              <th scope="col">image</th>
              <th scope="col">name</th>
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
            <% @users.each do |user| %>
          <tbody>
            <tr>

              
              <th scope="row"><%= image_tag user.get_profile_image(50,50) %></th>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user.id) %></td>
            </tr>
            <% end %>
                

            </tr>
          </tbody>
        </table>
        
        <!--ここまで-->
    </div>
  </div>
</div>

